<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="@dimen/activity_margin">
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--tools:text="Alarm"-->
        <!--android:textColor="#000"-->
        <!--android:textSize="16sp"-->
        <!--android:paddingBottom="20dp"-->
        <!--android:id="@+id/label2"-->
        <!--android:layout_marginStart="10dp"-->
        <!--/>-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Alarm"
        android:textColor="#000"
        android:textSize="16sp"
        android:paddingBottom="20dp"
        android:id="@+id/label3"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/report_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#2B3D4D"
        android:textSize="50sp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        tools:text="9:00"

        />
    <TextView
        android:id="@+id/am_pm_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="PM"
        android:layout_alignBaseline="@+id/report_time"
        android:layout_alignBottom="@+id/report_time"
        android:layout_toEndOf="@+id/report_time"
        android:paddingLeft="5dp"/>


    <TextView
        android:id="@+id/Taken"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="#AEB6BD"
        android:gravity="center_vertical"
        android:layout_above="@+id/am_pm_report"
        android:layout_alignParentEnd="true"
        tools:text="Taken"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pill Taken?"
        android:textColor="#000"
        android:layout_above="@id/Taken"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>